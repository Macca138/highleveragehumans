<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <!-- Windows Start Screen Tiles for High Leverage Humans -->
      <square70x70logo src="/assets/icons/tile-70x70.png"/>
      <square150x150logo src="/assets/icons/tile-150x150.png"/>
      <wide310x150logo src="/assets/icons/tile-310x150.png"/>
      <square310x310logo src="/assets/icons/tile-310x310.png"/>
      
      <!-- Premium brand colors -->
      <TileColor>#1a1a1a</TileColor>
      
      <!-- Windows 11 tile improvements -->
      <square44x44logo src="/assets/icons/tile-44x44.png"/>
      <square71x71logo src="/assets/icons/tile-71x71.png"/>
      <square284x284logo src="/assets/icons/tile-284x284.png"/>
    </tile>
    
    <!-- Polling frequency for live tiles (in minutes) -->
    <polling-uri src="/api/tile-notifications"/>
    <frequency>30</frequency>
    
    <!-- Badge notifications for trading alerts -->
    <badge>
      <polling-uri src="/api/badge-updates"/>
      <frequency>15</frequency>
    </badge>
    
    <!-- Windows notification settings -->
    <notification>
      <polling-uri src="/api/notifications"/>
      <frequency>60</frequency>
      <cycle>1</cycle>
    </notification>
    
    <!-- Windows Start Screen customization -->
    <TileImage>
      <Square150x150Logo src="/assets/icons/tile-150x150.png"/>
      <Wide310x150Logo src="/assets/icons/tile-310x150.png"/>
      <Square310x310Logo src="/assets/icons/tile-310x310.png"/>
    </TileImage>
    
    <!-- Premium domain branding -->
    <Application>
      <DisplayName>High Leverage Humans</DisplayName>
      <Description>Premium trading strategies, startup scaling, and business leverage optimization platform</Description>
      <StartUrl>/</StartUrl>
      
      <!-- Windows taskbar integration -->
      <TaskbarGrouping>HighLeverageHumans</TaskbarGrouping>
      
      <!-- Jump list items for quick access -->
      <JumpList>
        <Task>
          <Title>Trading Dashboard</Title>
          <Description>Access high-leverage trading strategies</Description>
          <IconPath>/assets/icons/trading-icon.ico</IconPath>
          <Arguments>/trading/</Arguments>
        </Task>
        <Task>
          <Title>Startup Resources</Title>
          <Description>Scaling and funding resources</Description>
          <IconPath>/assets/icons/startup-icon.ico</IconPath>
          <Arguments>/startups/</Arguments>
        </Task>
        <Task>
          <Title>Leverage Tools</Title>
          <Description>Business optimization tools</Description>
          <IconPath>/assets/icons/tools-icon.ico</IconPath>
          <Arguments>/tools/</Arguments>
        </Task>
        <Task>
          <Title>Community</Title>
          <Description>Connect with professionals</Description>
          <IconPath>/assets/icons/community-icon.ico</IconPath>
          <Arguments>/community/</Arguments>
        </Task>
      </JumpList>
    </Application>
    
    <!-- Live tile templates for financial data -->
    <LiveTiles>
      <Template id="TileSquare150x150Text01">
        <visual>
          <binding template="TileSquare150x150Text01">
            <text id="1">Market Update</text>
            <text id="2">High Leverage Opportunities</text>
            <text id="3">View Latest Strategies</text>
            <text id="4">HighLeverageHumans.com</text>
          </binding>
        </visual>
      </Template>
      
      <Template id="TileWide310x150Text01">
        <visual>
          <binding template="TileWide310x150Text01">
            <text id="1">High Leverage Humans - Premium Trading Platform</text>
            <text id="2">Latest: 100x Leverage Strategies Available</text>
            <text id="3">Startup Scaling Resources Updated</text>
            <text id="4">Community: 10K+ Active Professionals</text>
            <text id="5">Visit HighLeverageHumans.com for more</text>
          </binding>
        </visual>
      </Template>
    </LiveTiles>
    
    <!-- Toast notification templates -->
    <ToastCapable>true</ToastCapable>
    <ToastTemplate>
      <visual>
        <binding template="ToastText02">
          <text id="1">High Leverage Humans</text>
          <text id="2">New trading opportunity available</text>
        </binding>
      </visual>
      <actions>
        <action activationType="protocol" arguments="https://highleveragehumans.com/trading/" content="View Opportunity"/>
        <action activationType="system" arguments="dismiss" content="Dismiss"/>
      </actions>
      <audio src="ms-winsoundevent:Notification.Default"/>
    </ToastTemplate>
  </msapplication>
  
  <!-- Windows 8.1+ specific features -->
  <msapplication-config>
    <!-- Premium domain specific settings -->
    <msapplication-TileColor>#1a1a1a</msapplication-TileColor>
    <msapplication-square70x70logo content="/assets/icons/tile-70x70.png"/>
    <msapplication-square150x150logo content="/assets/icons/tile-150x150.png"/>
    <msapplication-wide310x150logo content="/assets/icons/tile-310x150.png"/>
    <msapplication-square310x310logo content="/assets/icons/tile-310x310.png"/>
    
    <!-- Windows integration features -->
    <msapplication-notification>
      <msapplication-task content="name=Trading;action-uri=/trading/;icon-uri=/assets/icons/trading-icon.ico"/>
      <msapplication-task content="name=Startups;action-uri=/startups/;icon-uri=/assets/icons/startup-icon.ico"/>
      <msapplication-task content="name=Tools;action-uri=/tools/;icon-uri=/assets/icons/tools-icon.ico"/>
      <msapplication-task content="name=Community;action-uri=/community/;icon-uri=/assets/icons/community-icon.ico"/>
    </msapplication-notification>
    
    <!-- Search integration -->
    <msapplication-starturl content="/"/>
    <msapplication-tooltip content="High Leverage Humans - Premium Trading & Business Platform"/>
    
    <!-- Windows 10+ features -->
    <msapplication-navbutton-color content="#1a1a1a"/>
    <msapplication-square44x44logo content="/assets/icons/tile-44x44.png"/>
    <msapplication-square71x71logo content="/assets/icons/tile-71x71.png"/>
    <msapplication-square284x284logo content="/assets/icons/tile-284x284.png"/>
  </msapplication-config>
</browserconfig>