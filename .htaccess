# ==============================================================================
# MIME TYPES - Modern Web Standards
# ==============================================================================

<IfModule mod_mime.c>
    # Web fonts
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    
    # Modern image formats
    AddType image/webp .webp
    AddType image/avif .avif
    
    # Web app manifest
    AddType application/manifest+json .webmanifest
    AddType application/json .json
    
    # Security files
    AddType text/plain .txt
</IfModule>

# ==============================================================================
# ERROR PAGES - Premium User Experience
# ==============================================================================

ErrorDocument 404 /index.html?error=404
ErrorDocument 403 /index.html?error=403
ErrorDocument 500 /index.html?error=500
ErrorDocument 503 /index.html?error=503

# ==============================================================================
# FILE ACCESS PROTECTION - Security for Premium Domain
# ==============================================================================

# Protect sensitive files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Require all denied
</FilesMatch>

# Protect .htaccess and other Apache files
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# Protect Node.js files
<FilesMatch "(package\.json|yarn\.lock|\.env)$">
    Require all denied
</FilesMatch>

# Allow access to humans.txt and security.txt
<FilesMatch "(humans\.txt|security\.txt)$">
    Require all granted
</FilesMatch>

